    "@types/storybook__addon-storyshots": "^3.4.4",
    "@types/webpack-env": "^1.13.6",
    "awesome-typescript-loader": "^5.2.1",
    "babel-loader": "^8.0.0",
    "babel-plugin-require-context-hook": "^1.0.0",
    "commitizen": "^3.0.0",
