  },
  "license": "MIT",
  "engines": {
    "node": ">=8.0.0"
  },
  "scripts": {
    "lint:ts": "tslint --project tsconfig.json -t codeFrame 'src/**/*.ts' 'test/**/*.ts'",
    "lint:js": "eslint 'tools/**/*.js'",
    "lint": "npm run lint:js && npm run lint:ts",
    "prebuild": "rimraf dist",
    "build": "rollup -c rollup.config.ts && typedoc --out docs --target es6 --theme minimal --mode file src",
    "start": "rollup -c rollup.config.ts -w",
    "jest:e2e": "jest -c e2e/jest.config.js",
    "test:e2e": "start-server-and-test storybook:ci http-get://localhost:6006 jest:e2e",
    "test:unit": "jest -c jest.config.js",
    "test": "npm run test:e2e && npm run test:unit -- --coverage",
    "test:watch": "jest --coverage --watch",
    "test:prod": "npm run lint && npm run test -- --no-cache",
    "deploy-docs": "node tools/gh-pages-publish",
    "report-coverage": "cat ./coverage/lcov.info | coveralls",
    "commit": "git-cz",
    "semantic-release": "semantic-release",
    "semantic-release-prepare": "node tools/semantic-release-prepare",
    "travis-deploy-once": "travis-deploy-once",
    "storybook": "start-storybook -p 6006",
    "storybook:ci": "start-storybook -p 6006 --ci --quiet",
    "build-storybook": "build-storybook"
  },
  "devDependencies": {
    "@babel/core": "^7.2.2",
    "@commitlint/cli": "^7.1.2",
    "@commitlint/config-conventional": "^7.1.2",
